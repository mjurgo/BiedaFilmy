@model BiedaFilmy.Models.Movie

@{
    ViewData["Title"] = "Details";
}
<style>
    * {
        color: white;
    }

    .row {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .back-to-list a {
        color: white;
        text-decoration: none;
    }

    .inputs {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .save-btn {
        background-color: white;
    }

    .save-btn {
        padding: 5px;
        background-color: transparent;
        color: white;
        padding: 10px;
        background-color: black;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        transition-duration: 0.5s;
    }

        .save-btn:hover {
            padding: 5px;
            background-color: white;
            color: black;
            padding: 10px;
        }

        .save-btn:focus {
            padding: 5px;
            background-color: white;
            color: black;
            padding: 10px;
        }

        dt {
            text-align: right;
        }

</style>
<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Release)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Release)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.Id)
        </dd>
    </dl>
</div>
<div class="back-to-list">
    <a  asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a   asp-action="Index">Back to List</a>
</div>

<partial name="_AddRole" model="new Role() { MovieId = Model.Id }" />