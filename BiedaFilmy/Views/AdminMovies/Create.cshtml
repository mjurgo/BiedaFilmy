@model BiedaFilmy.Models.Movie

@{
    ViewData["Title"] = "Create";
}
<style> 

    * {
        color: white;
    }

    .save-btn {
        padding: 5px;
        background-color: transparent;
        color: white;
        padding: 10px;
        background-color: black;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        transition-duration: 0.5s;
    }

        .save-btn:hover {
            padding: 5px;
            background-color: white;
            color: black;
            padding: 10px;
        }

        .save-btn:focus {
            padding: 5px;
            background-color: white;
            color: black;
            padding: 10px;
        }

    .back-to-list {
        color: white;
        text-decoration: none;
    }

    .back-to-list:hover {
        color: white;
        text-decoration: none;
    }

    .row {
        width: 100%;
        display: flex;
        justify-content: center;
    }
</style>
<h1>Tworzenie filmu</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tytuł</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label">Czas trwania</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Release" class="control-label">Premiera</label>
                <input asp-for="Release" class="form-control" />
                <span asp-validation-for="Release" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreId" class="control-label">Gatunek</label>
                <select asp-for="GenreId" class ="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Stwórz" class="save-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="back-to-list">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
