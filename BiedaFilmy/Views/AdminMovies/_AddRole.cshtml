@model BiedaFilmy.Models.Role

<style> 
    <style >
    * {
        color: white;
    }

    .row {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .back-to-list a {
        color: white;
        text-decoration: none;
    }

    .inputs {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .save-btn {
        background-color: white;
    }

    .save-btn {
        padding: 5px;
        background-color: transparent;
        color: white;
        padding: 10px;
        background-color: black;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        transition-duration: 0.5s;
    }

        .save-btn:hover {
            padding: 5px;
            background-color: white;
            color: black;
            padding: 10px;
        }

        .save-btn:focus {
            padding: 5px;
            background-color: white;
            color: black;
            padding: 10px;
        }

    dt {
        text-align: right;
    }

</style>
</style>
<h2>Dodaj rolę i aktora</h2>
<div class="col-md-4">
    <form asp-action="AddRole">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="MovieId" class="form-control" type="hidden" />
        <div class="form-group">
            <label asp-for="Person" class="control-label">Imię i nazwisko</label>
            <input asp-for="Person" class="form-control" />
            <span asp-validation-for="Person" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CharacterName" class="control-label">Jako</label>
            <input asp-for="CharacterName" class="form-control" />
            <span asp-validation-for="CharacterName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Dodaj" class="save-btn " />
        </div>
    </form>
</div>