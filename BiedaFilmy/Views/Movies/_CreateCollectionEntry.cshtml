@using BiedaFilmy.Enums

@model BiedaFilmy.Models.Collection

<div class="col-md-4">
    <form asp-action="AddToCollection">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            <input asp-for="Id" value="@Model.Id    " class="form-control" type="hidden" />
        }
        <input asp-for="MovieId" class="form-control" type="hidden" />
        <div class="form-group">
            <select asp-for="Status" asp-items="Html.GetEnumSelectList<CollectionStatus>()"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select asp-for="Mark">
                <option value="">Oceń</option>
                @for (int i = 1; i < 11; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <span asp-validation-for="Mark" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.TextAreaFor(c => c.Comment)
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Dodaj" class="btn btn-primary" />
            @if (Model.Id != 0)
            {
                @Html.ActionLink("Usuń z kolekcji", "DeleteCollectionEntry", "Movies", new { Id = Model.Id })
            }
        </div>
    </form>
</div>