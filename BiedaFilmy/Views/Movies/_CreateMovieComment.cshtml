@model BiedaFilmy.Models.MovieComment
<style> 
    .input {
        padding: 5px;
        background-color: transparent;
        color: white;
        padding: 10px;
        background-color: black;
        margin-top: 10px;
        margin-bottom: 10px;
        transition-duration: 0.5s;
        border-radius: 5px;
    }

        .input:active {
            background-color: black;
            color: white;
        }

        .input:focus {
            background-color: black;
        }

        .input:hover {
            background-color: white;
            color: black;
        }
</style>
<div class="col-md-4">
    <form asp-action="CreateMovieComment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="MovieId" class="input form-control" type="hidden" />
        <div class="form-group">
            @Html.TextAreaFor(m => m.Content)
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input class="input " type="submit" value="Skomentuj" class="btn btn-primary" />
        </div>
    </form>
</div>