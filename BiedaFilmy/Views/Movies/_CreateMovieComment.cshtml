@model BiedaFilmy.Models.MovieComment

<div class="col-md-4">
    <form asp-action="CreateMovieComment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="MovieId" class="form-control" type="hidden" />
        <div class="form-group">
            @Html.TextAreaFor(m => m.Content)
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Skomentuj" class="btn btn-primary" />
        </div>
    </form>
</div>