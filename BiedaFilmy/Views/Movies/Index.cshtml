@model IEnumerable<BiedaFilmy.Models.Movie>

@{
    ViewData["Title"] = "Filmy";
}

<style> 
    * {
        color: white
    }

    .create-paragraph{
        margin: 20px 0px 20px 0px;
    }
    .create {
        color: white;
        border: 1px solid white;
        padding: 10px;
        text-decoration: none;
        border-radius: 5px;
        margin: 5px;
    }
    .create:hover{
        color:white;
        cursor: pointer;
    }
    .table tr>th {
        color: white;
        text-align: center;
        margin: 10px;
        padding: 10px;
    }
    tbody tr>td {
        text-align: center;
    }
    tr{
        height: 70px;
        line-height: 50px;
    }

    .table-row{
        padding: 10px;
        margin-top: 220px;
    }
    .white-link {
        color: white;
        text-decoration: none;
        border: 1px solid white;
        color: white;
        padding: 10px;
        border-radius: 5px;
        transition-duration: 0.5s;
    }

    .white-link:hover{
        cursor: pointer;
        border: 1px solid white;
        color: black;
        padding: 10px;
        border-radius: 5px;
        background-color: white;
    }
</style>

<h1>Lista filmów</h1>

@if (User.IsInRole("Admin"))
{
    <p class="create-paragraph">
        <a asp-action="Create" asp-controller="AdminMovies" class="create">Dodaj film</a>
    </p>
}
<table class="table">
    <thead>
        <tr class="table-row">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.ActionLink(item.Title, "Details", "Movies", new { Id = item.Id }, new { @class = "white-link" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @item.Release.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
        </tr>
}
    </tbody>
</table>
