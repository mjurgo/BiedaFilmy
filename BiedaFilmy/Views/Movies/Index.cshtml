@model IEnumerable<BiedaFilmy.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<style> 
    * {
        color: white
    }

    .create-paragraph{
        margin: 20px 0px 20px 0px;
    }
    .create {
        color: white;
        border: 1px solid white;
        padding: 10px;
        text-decoration: none;
        border-radius: 5px;
        margin: 5px;
    }
    .create:hover{
        color:white;
        cursor: pointer;
    }
    .table tr>th {
        color: white;
        text-align: center;
    }
</style>

<h1>Lista filmów</h1>

<p class="create-paragraph">
    <a asp-action="Create" class="create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Release)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
