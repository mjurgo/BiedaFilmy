@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style> 
    .login-page{
        color: #fff;
        width: 100%;
        align-items: center;
    }
    .login-section{
        display: flex;
    }
    .row{
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        padding: 10px;
    }
    .under-form-links{
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
        padding: 5px;
    }

        .under-form-links p > a {
            color: white;
            text-decoration: none;
        }

    .input {
        padding: 5px;
        background-color: transparent;
        color: white;
        padding: 5px;
        background-color: black;
        margin-top: 10px;
        margin-bottom: 10px;
    }

        .input:active .input:focus {
            background-color: black;
            color: white;
        }

        .input:focus {
            background-color: black;
        }

    .submit-button {
        color: white;
        background-color: black;
        border: 1px solid white;
    }
    .submit-button:hover {
        color: black;
        background-color: white;
        border: 1px solid black;
    }

    .submit-button:active {
        color: black;
        background-color: white;
        border: 1px solid black;
    }

        .submit-button:focus {
            color: black;
            background-color: white;
            border: 1px solid black;
        }
</style>
<h1>@ViewData["Title"]</h1>
<div class="login-page">
<div class="row">
    <div class="col-md-4">
        <section class="login-section">
            <form id="account" method="post">
                <h2>Zaloguj się</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Username" class="form-control input" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Username" class="form-label"></label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control input" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                        <button id="login-submit" type="submit" class=" submit-button w-100 btn btn-lg btn-primary ">Zaloguj</button>
                </div>
                <div class="under-form-links">
                    <p>
                        <a id="forgot-password"  asp-page="./ForgotPassword">Skleroza?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
